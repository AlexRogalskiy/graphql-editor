{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "lib": ["es6", "es7", "esnext", "dom"],
    "outDir": "../dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "rootDir": "../"
  },
  "exclude": ["dist", "build", "node_modules"]
}
