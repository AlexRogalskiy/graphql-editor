{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "lib": ["es6", "es7", "dom"],
    "outDir": "./lib",
    "baseUrl": "./",
    "rootDir": "../"
  },
  "exclude": ["dist", "build", "node_modules"]
}
